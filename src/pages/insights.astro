---
import Layout from '../layouts/Layout.astro';
import AutoToc from '../components/AutoToc.astro';
import { getCollection } from 'astro:content';

const insights = await getCollection('insights', ({ data }) => !data.draft);
const statusOrder = { published: 0, active: 1, planned: 2 };

insights.sort((a, b) => {
  const statusDiff = statusOrder[a.data.status] - statusOrder[b.data.status];
  if (statusDiff !== 0) return statusDiff;
  return a.data.title.localeCompare(b.data.title);
});

const statusLabel = {
  published: 'Published',
  active: 'In Progress',
  planned: 'Planned',
};

const insightLinks = insights.map((entry) => ({
  title: entry.data.title,
  href: `/insights/${entry.slug}`,
}));
---

<Layout title="Vibe Insights | Vibe AI Infra" description="Performance and cost analysis for AI infrastructure">
  <main class="insights-shell reveal">
    <aside class="side-rail">
      <AutoToc rootSelector=".main-content" itemSelector="[data-toc]" />

      <div class="toc-card">
        <p class="toc-title">Insights</p>
        <nav class="toc-list">
          {insightLinks.map((item) => (
            <a href={item.href}>{item.title}</a>
          ))}
        </nav>
      </div>
    </aside>

    <div class="main-content">
      <header class="insights-header" id="overview" data-toc data-toc-label="Overview">
        <span class="eyebrow">Analysis</span>
        <h1>Vibe Insights</h1>
        <p>
          Engineering notes on performance modeling, workload bottlenecks, and serving economics.
        </p>
      </header>

      <section class="insights-grid" id="insight-library" data-toc data-toc-label="Insight Library">
        {insights.map((entry) => (
          <a class="insight-card" href={`/insights/${entry.slug}`}>
            <div class="insight-top">
              <h2>{entry.data.title}</h2>
              <span class={`status ${entry.data.status}`}>{statusLabel[entry.data.status]}</span>
            </div>
            <p>{entry.data.description}</p>
            {entry.data.tags.length > 0 && (
              <div class="tag-row">
                {entry.data.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
            <span class="jump">Read insight</span>
          </a>
        ))}
      </section>
    </div>
  </main>
</Layout>

<style>
  .insights-shell {
    max-width: 1240px;
    margin: 0 auto;
    padding: 56px 20px 100px;
    display: grid;
    grid-template-columns: 290px minmax(0, 1fr);
    gap: 20px;
  }

  .side-rail {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .toc-card {
    position: sticky;
    top: 82px;
    background: rgba(255, 255, 255, 0.94);
    border: 1px solid var(--line);
    border-radius: 12px;
    padding: 14px;
  }

  .toc-card + .toc-card {
    top: 218px;
  }

  .toc-title {
    font-size: 0.72rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--muted);
    margin-bottom: 10px;
    font-weight: 700;
  }

  .toc-list {
    display: flex;
    flex-direction: column;
    gap: 6px;
    max-height: 380px;
    overflow: auto;
  }

  .toc-list a {
    font-size: 0.84rem;
    color: var(--ink-soft);
    padding: 0.3rem 0.45rem;
    border-radius: 8px;
  }

  .toc-list a:hover {
    background: #eef4ff;
    color: var(--ink);
  }

  .insights-header {
    max-width: 760px;
    margin-bottom: 28px;
  }

  .eyebrow {
    display: inline-block;
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--muted);
    font-size: 0.72rem;
  }

  h1 {
    font-family: var(--font-display);
    letter-spacing: -0.03em;
    line-height: 1.05;
    font-size: clamp(2.2rem, 5vw, 3.6rem);
  }

  .insights-header p {
    margin-top: 12px;
    color: var(--muted);
    font-size: 1.03rem;
    line-height: 1.72;
  }

  .insights-grid {
    display: grid;
    gap: 14px;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }

  .insight-card {
    display: flex;
    flex-direction: column;
    background: linear-gradient(165deg, rgba(255, 255, 255, 0.96), rgba(246, 250, 255, 0.9));
    border: 1px solid var(--line);
    border-radius: 16px;
    padding: 22px;
    transition: transform 180ms ease, border-color 180ms ease, box-shadow 180ms ease;
  }

  .insight-card:hover {
    transform: translateY(-2px);
    border-color: var(--accent);
    box-shadow: 0 12px 24px rgba(37, 99, 235, 0.12);
  }

  .insight-top {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 12px;
  }

  h2 {
    font-family: var(--font-display);
    font-size: 1.18rem;
    letter-spacing: -0.01em;
  }

  .status {
    border-radius: 999px;
    font-size: 0.72rem;
    font-weight: 600;
    padding: 0.24rem 0.55rem;
    white-space: nowrap;
  }

  .status.published {
    background: #dcfce7;
    color: #166534;
  }

  .status.active {
    background: #dbeafe;
    color: #1e40af;
  }

  .status.planned {
    background: #fff4d7;
    color: #8a4b08;
  }

  .insight-card p {
    margin-top: 10px;
    color: var(--muted);
    font-size: 0.95rem;
    line-height: 1.68;
  }

  .tag-row {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
    margin-top: 14px;
  }

  .tag {
    font-size: 0.71rem;
    padding: 0.2rem 0.5rem;
    border-radius: 999px;
    background: #eff6ff;
    color: #1d4ed8;
  }

  .jump {
    margin-top: auto;
    padding-top: 16px;
    color: var(--accent);
    font-size: 0.86rem;
    font-weight: 600;
  }

  @media (max-width: 900px) {
    .insights-shell {
      grid-template-columns: 1fr;
    }

    .side-rail {
      order: 2;
    }

    .toc-card,
    .toc-card + .toc-card {
      position: static;
    }

    .toc-list {
      max-height: none;
    }
  }
</style>
