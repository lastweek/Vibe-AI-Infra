---
import Layout from '../layouts/Layout.astro';
import AutoToc from '../components/AutoToc.astro';
import ProjectsTable from '../components/ProjectsTable';
import ProjectCards from '../components/ProjectCards';
import { getCollection } from 'astro:content';
import { slugifySegment } from '../utils/slug';

const projectEntries = await getCollection('projects');

const categories = projectEntries.map((entry) => {
  const categorySlug = slugifySegment(entry.data.category);
  return {
    category: entry.data.category,
    projects: entry.data.projects.map((project) => ({
      ...project,
      href: `/nano-infra/${categorySlug}/${slugifySegment(project.name)}`,
    })),
  };
});

const categoryOrder = ['Silicon', 'Virt', 'Compiler', 'Framework', 'Agent'];
categories.sort((a, b) => categoryOrder.indexOf(a.category) - categoryOrder.indexOf(b.category));

const projectLinks = categories.flatMap((category) =>
  category.projects.map((project) => ({
    name: project.name,
    href: project.href,
  }))
);
---

<Layout title="Vibe Nano | Vibe AI Infra" description="Project tracker for Vibe Nano AI infrastructure work.">
  <main class="nano-shell reveal">
    <aside class="side-rail">
      <AutoToc rootSelector=".main-content" itemSelector="[data-toc]" />

      <div class="toc-card">
        <p class="toc-title">Nano Projects</p>
        <nav class="toc-list">
          {projectLinks.map((item) => (
            <a href={item.href}>{item.name}</a>
          ))}
        </nav>
      </div>
    </aside>

    <div class="main-content">
      <header class="page-header" id="overview" data-toc data-toc-label="Overview">
        <span class="badge">Infrastructure Build Tracker</span>
        <h1>Vibe Nano</h1>
        <p class="subtitle">
          Progress across silicon, virtualization, compilers, frameworks, and agents.
        </p>
      </header>

      <section class="table-section" id="project-table" data-toc>
        <div class="section-header">
          <h2>Project Table</h2>
          <p class="section-subtitle">Detailed status and descriptions</p>
        </div>
        <ProjectsTable categories={categories} client:load />
      </section>

      <section class="cards-section" id="project-cards" data-toc>
        <div class="section-header">
          <h2>Project Cards</h2>
          <p class="section-subtitle">Compact overview of all active efforts</p>
        </div>
        <ProjectCards categories={categories} client:load />
      </section>
    </div>
  </main>
</Layout>

<style>
  .nano-shell {
    max-width: 1260px;
    margin: 0 auto;
    padding: 52px 20px 90px;
    display: grid;
    grid-template-columns: 290px minmax(0, 1fr);
    gap: 20px;
  }

  .side-rail {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .toc-card {
    position: sticky;
    top: 82px;
    background: rgba(255, 255, 255, 0.94);
    border: 1px solid var(--line);
    border-radius: 12px;
    padding: 14px;
  }

  .toc-card + .toc-card {
    top: 244px;
  }

  .toc-title {
    font-size: 0.72rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--muted);
    margin-bottom: 10px;
    font-weight: 700;
  }

  .toc-list {
    display: flex;
    flex-direction: column;
    gap: 6px;
    max-height: 360px;
    overflow: auto;
  }

  .toc-list a {
    font-size: 0.84rem;
    color: var(--ink-soft);
    padding: 0.3rem 0.45rem;
    border-radius: 8px;
  }

  .toc-list a:hover {
    background: #eef4ff;
    color: var(--ink);
  }

  .page-header {
    text-align: center;
    max-width: 820px;
    margin: 0 auto 34px;
  }

  .badge {
    display: inline-block;
    padding: 0.32rem 0.75rem;
    background: #dbeafe;
    color: #1d4ed8;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 16px;
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }

  h1 {
    font-family: var(--font-display);
    font-size: clamp(2.4rem, 7vw, 4.2rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.06;
  }

  .subtitle {
    margin: 14px auto 0;
    max-width: 58ch;
    font-size: 1.07rem;
    color: var(--muted);
  }

  .section-header {
    text-align: center;
    margin: 20px auto 20px;
    max-width: 760px;
  }

  .section-header h2 {
    font-family: var(--font-display);
    letter-spacing: -0.02em;
    font-size: 1.8rem;
  }

  .section-subtitle {
    margin-top: 8px;
    color: var(--muted);
    font-size: 0.94rem;
  }

  .table-section {
    margin-bottom: 28px;
  }

  :global(.table-wrapper) {
    background: rgba(255, 255, 255, 0.92);
    border: 1px solid var(--line);
    border-radius: 14px;
    overflow: hidden;
    box-shadow: 0 10px 24px rgba(30, 58, 138, 0.07);
  }

  :global(.projects-table) {
    width: 100%;
    border-collapse: collapse;
  }

  :global(.projects-table thead) {
    background: #f5f9ff;
    border-bottom: 1px solid var(--line);
  }

  :global(.projects-table th) {
    padding: 10px 16px;
    text-align: left;
    font-weight: 600;
    font-size: 0.72rem;
    color: #5b6f89;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  :global(.projects-table td) {
    padding: 10px 16px;
    vertical-align: middle;
  }

  :global(.projects-table tbody tr) {
    border-bottom: 1px solid #edf2fa;
    cursor: pointer;
    transition: background-color 150ms ease;
  }

  :global(.projects-table tbody tr:last-child) {
    border-bottom: none;
  }

  :global(.projects-table tbody tr:hover) {
    background: #f8fbff;
  }

  :global(.projects-table tbody tr.selected) {
    background: #eef4ff;
  }

  :global(.projects-table tbody tr.category-silicon),
  :global(.projects-table tbody tr.category-virt),
  :global(.projects-table tbody tr.category-compiler),
  :global(.projects-table tbody tr.category-framework),
  :global(.projects-table tbody tr.category-agent) {
    background: transparent;
  }

  :global(.category-cell) {
    width: 15%;
    padding: 0;
    border-right: 1px solid #edf2fa;
    background: #f5f9ff;
  }

  :global(.category-cell .category-badge) {
    display: block;
    width: 100%;
    padding: 10px 16px;
    text-align: center;
    font-size: 0.72rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: #1e3a8a;
    background: #dbeafe;
  }

  :global(.project-cell) {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  :global(.project-name) {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--ink);
  }

  :global(.project-link) {
    color: inherit;
    border-radius: 6px;
    padding: 2px 4px;
    margin-left: -4px;
    transition: background 150ms ease, color 150ms ease;
  }

  :global(.project-link:hover) {
    background: #eef4ff;
    color: #1d4ed8;
  }

  :global(.github-link) {
    color: #6b7d96;
    transition: color 150ms ease;
    display: flex;
    align-items: center;
  }

  :global(.github-link:hover) {
    color: var(--accent);
  }

  :global(.description-cell) {
    color: #4f627a;
    font-size: 0.84rem;
    line-height: 1.45;
  }

  .cards-section {
    margin-top: 36px;
  }

  :global(.cards-container) {
    max-width: 1200px;
    margin: 0 auto;
  }

  :global(.cards-grid) {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 16px;
  }

  :global(.project-card) {
    background: linear-gradient(165deg, rgba(255, 255, 255, 0.96), rgba(246, 250, 255, 0.9));
    border: 1px solid var(--line);
    border-radius: 14px;
    padding: 20px;
    transition: transform 170ms ease, border-color 170ms ease, box-shadow 170ms ease;
    display: flex;
    flex-direction: column;
  }

  :global(.project-card:hover) {
    transform: translateY(-2px);
    border-color: var(--accent);
    box-shadow: 0 12px 24px rgba(37, 99, 235, 0.12);
  }

  :global(.card-header) {
    display: flex;
    gap: 14px;
    margin-bottom: 14px;
    align-items: flex-start;
  }

  :global(.card-icon) {
    font-size: 2.2rem;
    line-height: 1;
    flex-shrink: 0;
  }

  :global(.card-title) {
    font-size: 1.12rem;
    font-weight: 700;
    color: var(--ink);
    margin: 0 0 8px 0;
  }

  :global(.card-title-link) {
    color: inherit;
  }

  :global(.card-title-link:hover) {
    color: #1d4ed8;
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  :global(.card-meta) {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  :global(.category-badge) {
    padding: 4px 10px;
    border-radius: 999px;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.04em;
    background: #eff6ff;
    color: #1d4ed8;
  }

  :global(.status-badge) {
    padding: 4px 10px;
    border-radius: 999px;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.04em;
  }

  :global(.status-badge.Done) {
    background: #dcfce7;
    color: #166534;
  }

  :global(.status-badge.WIP) {
    background: #dbeafe;
    color: #1e40af;
  }

  :global(.status-badge.TBD) {
    background: #fff4d7;
    color: #8a4b08;
  }

  :global(.card-description) {
    color: #4f627a;
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 14px;
  }

  :global(.card-goals) {
    margin-bottom: 12px;
    padding-top: 14px;
    border-top: 1px solid #edf2fa;
  }

  :global(.card-goals h4) {
    font-size: 0.72rem;
    font-weight: 700;
    color: #6b7d96;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    margin-bottom: 10px;
  }

  :global(.card-goals ul) {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  :global(.card-goals li) {
    position: relative;
    padding: 6px 0 6px 16px;
    color: #4f627a;
    font-size: 0.84rem;
    line-height: 1.5;
  }

  :global(.card-goals li::before) {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }

  :global(.card-goals .more-goals) {
    color: #6b7d96;
    font-style: italic;
  }

  :global(.card-footer) {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-top: auto;
    padding-top: 12px;
  }

  :global(.details-link) {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 12px;
    border: 1px solid #bfdbfe;
    color: #1e40af;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.82rem;
    transition: background 150ms ease, border-color 150ms ease;
  }

  :global(.details-link:hover) {
    background: #eff6ff;
    border-color: #93c5fd;
  }

  :global(.repo-link) {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 14px;
    background: var(--accent);
    color: white;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.84rem;
    transition: background 150ms ease, transform 150ms ease;
  }

  :global(.repo-link:hover) {
    background: var(--accent-hover);
    transform: translateY(-1px);
  }

  :global(.modal-overlay) {
    position: fixed;
    inset: 0;
    background: rgba(15, 23, 42, 0.55);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    padding: 20px;
  }

  :global(.modal-content) {
    background: #ffffff;
    border-radius: 16px;
    max-width: 620px;
    width: 100%;
    max-height: 82vh;
    overflow-y: auto;
    box-shadow: 0 24px 36px rgba(15, 23, 42, 0.24);
  }

  :global(.modal-header) {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 10px;
    padding: 24px;
    border-bottom: 1px solid #edf2fa;
  }

  :global(.modal-header h2) {
    font-size: 1.45rem;
    font-weight: 700;
    color: var(--ink);
    margin: 0 0 8px 0;
  }

  :global(.modal-category) {
    display: inline-block;
    padding: 4px 10px;
    border-radius: 999px;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.04em;
    background: #eff6ff;
    color: #1d4ed8;
  }

  :global(.close-button) {
    background: #eef4ff;
    border: none;
    color: #4f627a;
    font-size: 1.05rem;
    cursor: pointer;
    padding: 8px 10px;
    line-height: 1;
    border-radius: 8px;
    transition: background 150ms ease, color 150ms ease;
    font-weight: 600;
  }

  :global(.close-button:hover) {
    background: var(--accent);
    color: white;
  }

  :global(.modal-body) {
    padding: 24px;
  }

  :global(.modal-description) {
    color: #4f627a;
    line-height: 1.7;
    font-size: 0.98rem;
    margin-bottom: 22px;
  }

  :global(.modal-goals h4) {
    font-size: 0.72rem;
    font-weight: 700;
    color: #6b7d96;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 10px;
  }

  :global(.modal-goals ul) {
    list-style: none;
    padding: 0;
    margin: 0 0 20px 0;
  }

  :global(.modal-goals li) {
    position: relative;
    padding: 8px 0 8px 20px;
    color: #4f627a;
    font-size: 0.9rem;
    line-height: 1.55;
  }

  :global(.modal-goals li::before) {
    content: '✓';
    position: absolute;
    left: 0;
    color: #15803d;
    font-weight: 700;
  }

  :global(.modal-repo-link) {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 11px 18px;
    background: var(--accent);
    color: white !important;
    border-radius: 9px;
    font-weight: 600;
    font-size: 0.9rem;
    transition: background 150ms ease, transform 150ms ease;
  }

  :global(.modal-repo-link:hover) {
    background: var(--accent-hover);
    transform: translateY(-1px);
  }

  @media (max-width: 900px) {
    .nano-shell {
      grid-template-columns: 1fr;
      padding-top: 40px;
    }

    .side-rail {
      order: 2;
    }

    .toc-card,
    .toc-card + .toc-card {
      position: static;
    }

    .toc-list {
      max-height: none;
    }

    :global(.cards-grid) {
      grid-template-columns: 1fr;
    }
  }
</style>
