---
import Layout from '../layouts/Layout.astro';
import ProjectsTable from '../components/ProjectsTable';
import ProjectCards from '../components/ProjectCards';
import { getCollection } from 'astro:content';

// Get all project data files
const projectEntries = await getCollection('projects');

// Transform into the format the component expects
const categories = projectEntries.map(entry => ({
  category: entry.data.category,
  projects: entry.data.projects
}));

// Sort categories by a predefined order
const categoryOrder = ['Silicon', 'Virt', 'Compiler', 'Framework', 'Agent'];
categories.sort((a, b) =>
  categoryOrder.indexOf(a.category) - categoryOrder.indexOf(b.category)
);
---

<Layout title="Vibe Nano - Vibe AI">
  <div class="page-header">
    <div class="badge">Open Source Infrastructure</div>
    <h1>Vibe Nano</h1>
    <p class="subtitle">
      Building essential components for next-generation AI systems—small enough to understand,
      powerful enough to change the world.
    </p>
  </div>

  <div class="cards-section">
    <div class="section-header">
      <h2>Projects Overview</h2>
      <p class="section-subtitle">Quick view of all nano infrastructure projects</p>
    </div>
    <ProjectCards categories={categories} client:load />
  </div>

  <div class="table-section">
    <div class="section-header">
      <h2>Projects Table</h2>
      <p class="section-subtitle">Detailed project tracking and status</p>
    </div>
    <ProjectsTable categories={categories} client:load />
  </div>

  <footer class="footer">
    <div class="footer-content">
      <p>Built with <span class="heart">❤</span> using Astro + React</p>
      <p class="footer-note">Tracking progress on next-generation AI infrastructure</p>
      <p class="footer-author">Viber: <a href="https://github.com/lastweek" target="_blank">Yizhou Shan</a></p>
    </div>
  </footer>
</Layout>

