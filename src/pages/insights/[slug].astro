---
import { getCollection, render } from 'astro:content';
import ContentLayout from '../../layouts/ContentLayout.astro';

export async function getStaticPaths() {
  const entries = await getCollection('insights', ({ data }) => !data.draft);
  const sideLinks = entries.map((item) => ({
    href: `/insights/${item.slug}`,
    label: item.data.title,
  }));

  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry, sideLinks },
  }));
}

const { entry, sideLinks } = Astro.props;
const { Content, headings } = await render(entry);

const toc = headings
  .filter((heading) => heading.depth === 2)
  .map((heading) => ({
    href: `#${heading.slug}`,
    label: heading.text,
  }));

const scopedLinks = sideLinks.map((item: { href: string; label: string }) => ({
  ...item,
  active: item.href === `/insights/${entry.slug}`,
}));
---

<ContentLayout
  title={entry.data.title}
  description={entry.data.description}
  eyebrow="Insight"
  updated={entry.data.publishDate}
  backHref="/insights"
  backLabel="â† Back to Vibe Insights"
  toc={toc}
  sideLinksTitle="Insights"
  sideLinks={scopedLinks}
>
  <Content />
</ContentLayout>
