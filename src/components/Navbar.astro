---
const currentPage = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/nano-infra', label: 'Vibe Nano' },
  { href: '/insights', label: 'Vibe Insights' },
  { href: '/til', label: 'TIL' },
];

const isActive = (href: string) => {
  if (href === '/') return currentPage === '/';
  return currentPage === href || currentPage.startsWith(`${href}/`);
};
---

<nav class="navbar">
  <div class="nav-inner">
    <a href="/" class="brand">Vibe AI Infra</a>
    <div class="nav-links">
      {navItems.map((item) => (
        <a
          href={item.href}
          class={`nav-link ${isActive(item.href) ? 'active' : ''}`}
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<style>
  .navbar {
    position: sticky;
    top: 0;
    z-index: 20;
    border-bottom: 1px solid var(--line-default);
    background: rgba(250, 251, 248, 0.9);
    backdrop-filter: blur(12px);
  }

  .nav-inner {
    max-width: 1120px;
    margin: 0 auto;
    padding: 14px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
  }

  .brand {
    font-family: var(--font-display);
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .brand::before {
    content: '';
    width: 8px;
    height: 8px;
    background: var(--accent-primary);
    border-radius: 2px;
    box-shadow: 0 0 12px var(--glow-primary);
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 4px;
    flex-wrap: wrap;
    justify-content: flex-end;
  }

  .nav-link {
    color: var(--text-secondary);
    font-size: 0.85rem;
    font-weight: 500;
    padding: 0.42rem 0.68rem;
    border: 1px solid transparent;
    border-radius: var(--radius-md);
    transition: all 160ms ease;
    font-family: var(--font-mono);
    font-size: 0.8rem;
  }

  .nav-link:hover {
    border-color: var(--line-default);
    color: var(--text-primary);
    background: var(--bg-elevated);
  }

  .nav-link.active {
    color: var(--accent-primary);
    border-color: rgba(37, 99, 235, 0.2);
    background: rgba(37, 99, 235, 0.08);
  }

  @media (max-width: 760px) {
    .nav-inner {
      align-items: flex-start;
      flex-direction: column;
      padding-top: 12px;
      padding-bottom: 12px;
    }

    .nav-links {
      width: 100%;
      justify-content: flex-start;
      margin-top: 8px;
    }
  }
</style>
